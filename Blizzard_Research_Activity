    <!-- JavaScript for Quiz -->
    <script>
        // Quiz Logic
        const quizForm = document.getElementById('quiz-form');
        const quizResults = document.getElementById('quiz-results');

        quizForm.addEventListener('submit', function(event) {
            event.preventDefault(); // Stop form from submitting normally

            const correctAnswers = {
                q1: 'b', // Call of Duty
                q2: 'b', // Incorporate perspectives of diverse groups
                q3: 'b', // People of different socioeconomic backgrounds
                q4: 'b'  // News about upcoming games...
            };

            const formData = new FormData(quizForm);
            let score = 0;
            let allAnswered = true;

            // Check if all questions are answered
            if (!formData.get('q1') || !formData.get('q2') || !formData.get('q3') || !formData.get('q4')) {
                allAnswered = false;
            }

            if (!allAnswered) {
                quizResults.textContent = 'Please answer all questions before submitting.';
                quizResults.className = 'mt-6 p-4 rounded-lg bg-yellow-100 text-yellow-800 border border-yellow-200';
                quizResults.classList.remove('hidden');
                return;
            }

            // Calculate score
            if (formData.get('q1') === correctAnswers.q1) score++;
            if (formData.get('q2') === correctAnswers.q2) score++;
            if (formData.get('q3') === correctAnswers.q3) score++;
            if (formData.get('q4') === correctAnswers.q4) score++;

            // Display results
            quizResults.innerHTML = `You scored <strong>${score} out of 4</strong>.<br><br>`;
            
            // Provide feedback on answers
            const answersFeedback = [
                `<strong>Q1:</strong> The correct answer is <strong>Call of Duty</strong>. The text listed WoW, Diablo, Overwatch, and StarCraft.`,
                `<strong>Q2:</strong> The correct answer is <strong>Incorporate perspectives of diverse groups</strong>.`,
                `<strong>Q3:</strong> The correct answer is <strong>People of different socioeconomic backgrounds</strong>, as this was not in the provided list.`,
                `<strong>Q4:</strong> The correct answer is <strong>News about upcoming games...</strong> The homepage is clearly focused on marketing to players.`
            ];
            
            quizResults.innerHTML += answersFeedback.join('<br><br>');

            if (score === 4) {
                quizResults.className = 'mt-6 p-4 rounded-lg bg-green-100 text-green-800 border border-green-200';
            } else {
                quizResults.className = 'mt-6 p-4 rounded-lg bg-red-100 text-red-800 border border-red-200';
            }
            quizResults.classList.remove('hidden');
        });

        // Reset button logic
        quizForm.addEventListener('reset', function() {
            quizResults.classList.add('hidden');
            quizResults.textContent = '';
            quizResults.className = 'mt-6 p-4 rounded-lg hidden';
        });

        // Feedback for 'Save' buttons
        function setupSaveButton(buttonId, feedbackId) {
            const saveButton = document.getElementById(buttonId);
            const feedback = document.getElementById(feedbackId);

            if (saveButton) {
                saveButton.addEventListener('click', function() {
                    // In a real app, this would save to a database. Here, we just show a message.
                    feedback.classList.remove('hidden');
                    // Hide the message after 3 seconds
                    setTimeout(() => {
                        feedback.classList.add('hidden');
                    }, 3000);
                });
            }
        }

        setupSaveButton('save-scavenger', 'scavenger-feedback');
        setupSaveButton('save-reflection', 'reflection-feedback');
    </script>

